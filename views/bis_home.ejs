        if (!menu.contains(e.target) && e.target !== menuBtn) {
            menu.classList.remove('active');
        }
    });
    
    // NEW GALLERY FUNCTIONALITY
    const galleryTrack = document.getElementById('galleryTrack');
    const galleryCaption = document.getElementById('galleryCaption');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const galleryDots = document.getElementById('galleryDots');
    
    // MODIFIED: Using local image files b11.jpg, b111.jpg, etc.
    const galleryImages = [
        { src: "b11.jpg", caption: "Rooftop" },
        { src: "b111.jpg", caption: "Rooftop" },
        { src: "b2.jpg", caption: "Rooftop" },
        { src: "b3.jpg", caption: "Rooftop" },
        { src: "b4.jpg", caption: "Rooftop" },
        { src: "b5.jpg", caption: "Rooftop" },
        { src: "land.jpg", caption: "Land Purchased" },
        { src: "b7.jpg", caption: "Rooftop" },
        { src: "b8.jpg", caption: "Rooftop" },
        { src: "b9.jpg", caption: "Rooftop" }
    ];
    
    let currentGalleryIndex = 0;
    const totalGallerySlides = galleryImages.length;
    
    // Create dots for navigation
    function createDots() {
        galleryDots.innerHTML = '';
        for (let i = 0; i < totalGallerySlides; i++) {
            const dot = document.createElement('div');
            dot.classList.add('gallery-dot');
            if (i === currentGalleryIndex) {
                dot.classList.add('active');
            }
            dot.addEventListener('click', () => {
                goToSlide(i);
            });
            galleryDots.appendChild(dot);
        }
    }
    
    // Update gallery position and caption
    function updateGallery() {
        galleryTrack.style.transform = `translateX(-${currentGalleryIndex * 100}%)`;
        galleryCaption.textContent = galleryImages[currentGalleryIndex].caption;
        
        // Update active dot
        const dots = document.querySelectorAll('.gallery-dot');
        dots.forEach((dot, index) => {
            if (index === currentGalleryIndex) {
                dot.classList.add('active');
            } else {
                dot.classList.remove('active');
            }
        });
    }
    
    // Go to specific slide
    function goToSlide(index) {
        currentGalleryIndex = index;
        if (currentGalleryIndex >= totalGallerySlides) {
            currentGalleryIndex = 0;
        } else if (currentGalleryIndex < 0) {
            currentGalleryIndex = totalGallerySlides - 1;
        }
        updateGallery();
    }
    
    // Next slide
    function nextSlide() {
        currentGalleryIndex++;
        if (currentGalleryIndex >= totalGallerySlides) {
            currentGalleryIndex = 0;
        }
        updateGallery();
    }
    
    // Previous slide
    function prevSlide() {
        currentGalleryIndex--;
        if (currentGalleryIndex < 0) {
            currentGalleryIndex = totalGallerySlides - 1;
        }
        updateGallery();
    }
    
    // Initialize gallery
    function initGallery() {
        createDots();
        updateGallery();
        
        // Auto slide every 5 seconds
        setInterval(nextSlide, 5000);
    }
    
    // Event listeners for gallery buttons
    prevBtn.addEventListener('click', prevSlide);
    nextBtn.addEventListener('click', nextSlide);
    
    // Initialize everything when page loads
    window.onload = function() {
        initSlider();
        initGallery();
    };
    
    
  // WhatsApp Widget Functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Configuration - Change this to your WhatsApp number
    const WHATSAPP_NUMBER = "8801611203688";
    const DEFAULT_MESSAGE = "Hello!";
    
    // DOM Elements
    const toggleChatBtn = document.getElementById('toggle-chat');
    const closeChatBtn = document.getElementById('close-chat');
    const chatWindow = document.getElementById('chat-window');
    const messageInput = document.getElementById('whatsapp-message');
    const sendBtn = document.getElementById('send-whatsapp');
    const charCounter = document.getElementById('char-counter');
    
    // Toggle chat window
    toggleChatBtn.addEventListener('click', function() {
      chatWindow.classList.toggle('open');
      if (chatWindow.classList.contains('open')) {
        messageInput.focus();
      }
    });
    
    // Close chat window
    closeChatBtn.addEventListener('click', function() {
      chatWindow.classList.remove('open');
    });
    
    // Character counter for message input
    messageInput.addEventListener('input', function() {
      const length = messageInput.value.length;
      charCounter.textContent = length;
      
      // Enable/disable send button based on message length
      if (length > 0 && length <= 500) {
        sendBtn.disabled = false;
      } else {
        sendBtn.disabled = true;
      }
    });
    
    // Send message function
    sendBtn.addEventListener('click', function() {
      sendWhatsAppMessage();
    });
    
    // Allow sending message with Enter key (but not Shift+Enter)
    messageInput.addEventListener('keydown', function(e) {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        sendWhatsAppMessage();
      }
    });
    
    function sendWhatsAppMessage() {
      const message = messageInput.value.trim();
      
      // Use default message if input is empty
      const finalMessage = message || DEFAULT_MESSAGE;
      
      // Encode the message for URL
      const encodedMessage = encodeURIComponent(finalMessage);
      
      // Create WhatsApp URL
      const whatsappURL = `https://wa.me/${WHATSAPP_NUMBER}?text=${encodedMessage}`;
      
      // Redirect to WhatsApp
      window.open(whatsappURL, '_blank');
      
      // Clear input and close chat
      messageInput.value = '';
      charCounter.textContent = '0';
      sendBtn.disabled = true;
      
      // Close chat window after a short delay
      setTimeout(() => {
        chatWindow.classList.remove('open');
      }, 500);
    }
    
    // Initialize with default message in input
    messageInput.value = DEFAULT_MESSAGE;
    charCounter.textContent = DEFAULT_MESSAGE.length;
    
    // Auto-close chat when clicking outside on mobile
    document.addEventListener('click', function(event) {
      if (window.innerWidth <= 768) {
        const isClickInside = chatWindow.contains(event.target) || toggleChatBtn.contains(event.target);
        if (!isClickInside && chatWindow.classList.contains('open')) {
          chatWindow.classList.remove('open');
        }
      }
    });
  });


