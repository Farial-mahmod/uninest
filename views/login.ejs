    .custom-alert {
  position: fixed;
  top: 100px;
  left: 50%;
  transform: translateX(-50%);
  background-color: #ff4c4c;
  color: white;
  padding: 12px 24px;
  border-radius: 6px;
  font-weight: 500;
  z-index: 501;
  opacity: 0;
  transition: opacity 0.3s ease;
}

    .content-wrapper {
      display: flex;
      flex-direction: column;
      align-items: center; /* Centers children horizontally within the wrapper */
      padding: 10px;
      margin-top: 3px; 
      /* Optional: You can also use margin-bottom for space below the wrapper if needed */
    }
    
    .image-container img {
        max-width: 120px;
        height: auto;
        border-radius: 5%; /* Optional: for a round logo */
        margin-bottom: 4px; /* Space between the image and the login box */
    }

    .login-container {
      background-color: rgb(255, 255, 255);
      padding: 10px 41px;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.4);
      width: 100%;
      max-width: 380px;
      box-sizing: border-box;
    }

    .login-container h2 {
