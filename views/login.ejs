      font-size: 14px;
      color: #aaa;
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 20px;
      background-color: #1f1f1f;
      box-shadow: 0 2px 6px rgba(0,0,0,0.4);
      position: fixed;
      width: 100%;
      top: 0;
      left: 0;
      z-index: 1000;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .logo img {
      height: 40px;
      width: auto;
      border-radius: 4px;
    }

    .logo h1 {
      font-size: 18px;
      margin: 0;
      font-weight: 600;
    }

    /* --------------------------------- */
    /* DESKTOP NAVIGATION STYLES (New) */
    /* --------------------------------- */
    .nav-links {
      display: flex; /* Show the links in a row on desktop */
      gap: 25px;
    }

    .nav-links a {
      text-decoration: none;
      color: #fff;
      font-weight: 500;
      padding: 5px 10px;
      transition: color 0.3s ease;
    }

    .nav-links a:hover {
      color: #ffd700; /* Subtle gold hover effect */
    }
    
    .menu-btn {
      display: none; /* Hide the mobile menu button on desktop */
      background: none;
      border: none;
      font-size: 26px;
      cursor: pointer;
      color: #fff;
    }
    /* --------------------------------- */
    /* END DESKTOP NAVIGATION STYLES */
    /* --------------------------------- */


    /* Dropdown menu (Mobile/Active State) */
    .menu {
      display: none;
      position: absolute; /* Relative to the viewport/document */
      top: 65px; 
      right: 25px; /* Position close to the edge/button */
      background: #1f1f1f;
      box-shadow: 0 2px 10px rgba(255,255,255,0.2);
      border-radius: 8px;
      overflow: hidden;
      min-width: 150px;
    }

    .menu.active {
      display: block;
      animation: fadeIn 0.3s ease;
    }

    .menu a {
      display: block;
      padding: 20px 26px;
      text-decoration: none;
      color: #fff;
      font-weight: 500;
    }

    .menu a:hover {
      background: #333;
    }

    /* Responsive */
    @media (max-width: 500px) {
      .login-container {
        margin: 20px;
        padding: 30px 20px;
      }

      .login-container h2 {
        font-size: 22px;
      }
    }
